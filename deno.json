{
  "tasks": {
    "test": "deno test --env-file --allow-env --allow-read --allow-import --allow-net --parallel",
    "test:integration": "deno run --allow-net --env-file --allow-env --allow-read tests/integration.test.ts",
    "test:coverage": "deno test --env-file --allow-env --allow-read --allow-import --allow-net --coverage && deno coverage --output=coverage/lcov.info --lcov coverage/",
    "dev": "deno run --allow-net --allow-import --env-file --allow-env --allow-read server.ts",
    "lint": "deno lint src/ netlify/",
    "lint:fix": "deno lint --fix src/ netlify/",
    "fmt": "deno fmt src/ netlify/ tests/ *.ts *.json",
    "fmt:check": "deno fmt --check src/ netlify/ tests/ *.ts *.json",
    "check": "deno check --allow-import src/**/*.ts netlify/**/*.ts tests/**/*.ts *.ts",
    "precommit": "deno task fmt && deno task lint && deno task check && deno task test"
  },
  "test": {
    "include": ["**/*.test.ts"],
    "exclude": ["tests/integration.test.ts"]
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  }
}
