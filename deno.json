{
  "imports": {
    "@optimizely/optimizely-sdk": "https://cdn.skypack.dev/@optimizely/optimizely-sdk@6.0.0"
  },
  "tasks": {
    "test": "deno test",
    "test:unit": "deno test *.test.ts",
    "test:integration": "deno run --allow-net integration.test.ts",
    "dev": "deno run --allow-net --allow-import server.ts",
    "start": "deno run --allow-net --allow-import server.ts"
  },
  "test": {
    "include": ["**/*.test.ts"],
    "exclude": ["integration.test.ts"]
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  }
}
